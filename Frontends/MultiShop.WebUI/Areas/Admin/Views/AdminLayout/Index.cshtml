
@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadAdminLayoutComponentPartial")

<body class="sidebar-mini">
<div class="wrapper"> 
  
  <!-- Main Header -->
    @await Component.InvokeAsync("_HeaderAdminLayoutComponentPartial")
  <!-- Left side column. contains the logo and sidebar -->
    @await Component.InvokeAsync("_SidebarAdminLayoutComponentPartial")
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper"> 
    <!-- Content Header (Page header) -->
    @await Component.InvokeAsync("_MainSectionAdminLayoutComponentPartial")

    <!-- Main content -->
    @RenderBody()

    @await Component.InvokeAsync("_DeleteModalAdminLayoutComponentPartial")

    <!-- content -->
  </div>
  <!-- content-wrapper --> 
  
  <!-- Main Footer -->
  <footer class="main-footer dark-bg">
    <div class="pull-right hidden-xs"> Version 1.0</div>
    Copyright &copy; @DateTime.Now.Year MultiShop | Tüm Hakları Saklıdır. </footer>
</div>
<!-- wrapper --> 

<!-- jQuery --> 
<script src="~/MainDownload-OvioAdmin-html5-template/html/dist/js/jquery.min.js"></script> 
<script src="~/MainDownload-OvioAdmin-html5-template/html/bootstrap/js/bootstrap.min.js"></script> 
<script src="~/MainDownload-OvioAdmin-html5-template/html/dist/js/ovio.js"></script>

@await Component.InvokeAsync("NToastNotify")
</body>
</html>
