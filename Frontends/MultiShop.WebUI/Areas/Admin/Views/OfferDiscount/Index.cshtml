@model List<ResultOfferDiscountDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;

    bool isDisabled = Model.Count >= 2;
    string disabledAttribute = isDisabled ? "disabled" : "";
    string isWorking = isDisabled ? "#" : "CreateDiscountOffer";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İndirim Teklif Başlığı</th>
                                <th>İndirim Teklif Alt Başlığı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><button type="button" class="btn btn-danger" onclick="showDeleteConfirmation('/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId')">Sil</button></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn btn-primary" Title="2 adet indirim teklifi bulunmalı" "@isWorking" @disabledAttribute>Yeni İndirim Teklifi Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>
